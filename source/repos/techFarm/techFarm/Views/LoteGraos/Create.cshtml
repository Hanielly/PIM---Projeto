@model techFarm.Models.LoteGrao

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Adicionar Grãos</h1>

<h4>Preencha as Informações</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tipo de Grão</label>
                <input asp-for="TipoDeGrao" class="form-control" />
                <span asp-validation-for="TipoDeGrao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Quantidade em KG</label>
                <input asp-for="QuantidadeKG" type="number" class="form-control" />
                <span asp-validation-for="QuantidadeKG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Sementes</label>
                <select asp-for="ID_Sementes" class ="form-control" asp-items="ViewBag.ID_Sementes"></select>
            </div>
            <div class="form-group mt-3 d-inline-flex gap-2">
                <input type="submit" value="Adicionar Grão" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar ao Lote</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
