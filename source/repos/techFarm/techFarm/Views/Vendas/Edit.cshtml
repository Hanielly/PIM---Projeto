@model techFarm.Models.Venda

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Editar Vendas</h1>

<h4>Preencha as Informações</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID_Vendas" />
            <div class="form-group">
                <label class="control-label">Data da Venda</label>
                <input asp-for="DataDaVenda" class="form-control" />
                <span asp-validation-for="DataDaVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Quantidade Vendida (KG)</label>
                <input asp-for="QuantidadeKGVendida" class="form-control" />
                <span asp-validation-for="QuantidadeKGVendida" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Preço da Venda</label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Lote/Grãos</label>
                <select asp-for="ID_LotesGraos" class="form-control" asp-items="ViewBag.ID_LotesGraos"></select>
                <span asp-validation-for="ID_LotesGraos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Funcionário</label>
                <select asp-for="ID_Funcionarios" class="form-control" asp-items="ViewBag.ID_Funcionarios"></select>
                <span asp-validation-for="ID_Funcionarios" class="text-danger"></span>
            </div>
            <div class="form-group d-inline-flex gap-2 mt-3">
                <input type="submit" value="Salvar Alterações" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar à Vendas</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
