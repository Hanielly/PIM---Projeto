@model IEnumerable<techFarm.Models.Fornecedor>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-3" style="font-size: 2.5rem;">Fornecedores Cadastrados</h1>

<table class="table table-success table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="Edit" asp-route-id="@item.ID_Fornecedores" class="btn btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.ID_Fornecedores" class="btn btn-success">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.ID_Fornecedores" class="btn btn-danger">Excluir</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="d-inline-flex gap-2">
    <a asp-action="Create" class="btn btn-primary">Cadastrar Novo Fornecedor</a>
    <a asp-controller="Sementes" asp-action="Index" class="btn btn-primary">Ver Sementes</a>
</p>


